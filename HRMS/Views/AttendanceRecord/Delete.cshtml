@model HRMS.Models.AttendanceRecord

@{
    ViewData["Title"] = "Delete Attendance Record";
}

<h1>Delete Attendance Record</h1>

<h3 class="text-danger">Are you sure you want to delete this attendance record? This action cannot be undone.</h3>
<hr />

<div class="row">
    <div class="col-md-6">
        <dl class="row">
            <dt class="col-sm-4">Employee:</dt>
            <dd class="col-sm-8">@(@Model.Employee != null ? $"{Model.Employee.FirstName} {Model.Employee.LastName}" : "N/A")</dd>

            <dt class="col-sm-4">Date:</dt>
            <dd class="col-sm-8">@Model.Date.ToLocalTime().ToString("dddd, dd MMMM yyyy")</dd>

            <dt class="col-sm-4">Check-In Time:</dt>
            <dd class="col-sm-8 text-danger">@Model.CheckInTime.ToLocalTime().ToString("hh:mm:ss tt")</dd>

            <dt class="col-sm-4">Check-Out Time:</dt>
            <dd class="col-sm-8 text-danger">
                @if (Model.CheckOutTime.HasValue)
                {
                    @Model.CheckOutTime.Value.ToLocalTime().ToString("hh:mm:ss tt")
                }
                else
                {
                    <span class="badge bg-warning text-dark">Active Shift</span>
                }
            </dd>
        </dl>
    </div>
</div>

<form asp-action="Delete">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="AttendanceID" />
    <button type="submit" class="btn btn-danger"><i class="bi bi-trash"></i> Confirm Deletion</button>
    <a asp-action="List" class="btn btn-secondary">Cancel</a>
</form>