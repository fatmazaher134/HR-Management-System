@model HRMS.Models.AttendanceRecord

@{
    ViewData["Title"] = "Edit Attendance Record";
}

<h1>Edit Attendance Record</h1>
<h4 class="text-info">Employee: @(@Model.Employee != null ? $"{Model.Employee.FirstName} {Model.Employee.LastName}" : "N/A")</h4>
<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" asp-route-id="@Model.AttendanceID" method="post">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="AttendanceID" />
            <input type="hidden" asp-for="EmployeeID" />
            <input type="hidden" asp-for="Date" /> 

            <div class="form-group">
                <label asp-for="CheckInTime" class="control-label"></label>
                <input type="datetime-local" asp-for="CheckInTime" 
                       value="@Model.CheckInTime.ToLocalTime().ToString("yyyy-MM-ddTHH:mm")" class="form-control" />
                <span asp-validation-for="CheckInTime" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CheckOutTime" class="control-label"></label>
                @{
                    string checkOutValue = Model.CheckOutTime.HasValue
                    ? Model.CheckOutTime.Value.ToLocalTime().ToString("yyyy-MM-ddTHH:mm")
                    : "";
                }
                <input type="datetime-local" asp-for="CheckOutTime" value="@checkOutValue" class="form-control" />
                <span asp-validation-for="CheckOutTime" class="text-danger"></span>
                <small class="form-text text-muted">Leave blank if the employee is currently clocked in.</small>
            </div>

            <br />
            <div class="form-group">
                <button type="submit" class="btn btn-primary"><i class="bi bi-save"></i> Save Changes</button>
                <a asp-action="List" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}