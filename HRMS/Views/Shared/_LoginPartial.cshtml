@using Microsoft.AspNetCore.Identity
@using HRMS.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav ms-auto">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                <span class="d-none d-lg-inline me-2 fw-bold small text-secondary">@User.Identity?.Name</span>
                <i class="fas fa-user-circle fa-2x text-primary opacity-75"></i>
            </a>

            <ul class="dropdown-menu dropdown-menu-end shadow border-0 animated--grow-in" aria-labelledby="userDropdown">
                <li>
                    <a class="dropdown-item" asp-controller="Account" asp-action="Index" title="Manage">
                        <i class="fas fa-user fa-sm fa-fw me-2 text-gray-400"></i>
                        My Profile
                    </a>
                </li>

                @if (User.IsInRole("Admin"))
                {
                    <li>
                        <a class="dropdown-item" asp-controller="Account" asp-action="Register">
                            <i class="fas fa-user-plus fa-sm fa-fw me-2 text-gray-400"></i>
                            Register New User
                        </a>
                    </li>
                }

                <li><hr class="dropdown-divider"></li>

                <li>
                    <form class="form-inline" asp-controller="Account" asp-action="Logout" method="post">
                        <button type="submit" class="dropdown-item text-danger w-100 text-start">
                            <i class="fas fa-sign-out-alt fa-sm fa-fw me-2"></i>
                            Logout
                        </button>
                    </form>
                </li>
            </ul>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link btn btn-sm btn-outline-primary px-3 ms-2" asp-controller="Account" asp-action="Login" style="border-radius: 20px;">
                <i class="fas fa-sign-in-alt me-1"></i> Login
            </a>
        </li>
    }
</ul>