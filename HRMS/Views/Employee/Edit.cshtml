@model HRMS.ViewModels.Employee.EmployeeFormViewModel

@{
    ViewData["Title"] = "Edit employee data";
}
<div asp-validation-summary="All" class="text-danger"></div>

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-md-6">
            <h2 class="text-warning">
                <i class="fas fa-user-edit"></i> Edit employee data
            </h2>
        </div>
        <div class="col-md-6 text-end">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Back To List
            </a>
        </div>
    </div>

    <div class="card shadow">
        <div class="card-body">
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="EmployeeID" />
                <div asp-validation-summary="All" class="alert alert-danger"></div>

                <!-- personal info -->
                <div class="row mb-3">
                    <div class="col-md-12">
                        <h5 class="text-primary border-bottom pb-2">
                            <i class="fas fa-id-card"></i> personal information
                        </h5>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="FirstName" class="form-label"></label>
                        <input asp-for="FirstName" class="form-control" />
                        <span asp-validation-for="FirstName" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="LastName" class="form-label"></label>
                        <input asp-for="LastName" class="form-control" />
                        <span asp-validation-for="LastName" class="text-danger small"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Email" class="form-label"></label>
                        <input asp-for="Email" class="form-control" type="email" />
                        <span asp-validation-for="Email" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="PhoneNumber" class="form-label"></label>
                        <input asp-for="PhoneNumber" class="form-control" />
                        <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="DateOfBirth" class="form-label"></label>
                        <input asp-for="DateOfBirth" class="form-control" type="date" />
                        <span asp-validation-for="DateOfBirth" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="Address" class="form-label"></label>
                        <input asp-for="Address" class="form-control" />
                        <span asp-validation-for="Address" class="text-danger small"></span>
                    </div>
                </div>

                <!-- Job Information -->
                <div class="row mb-3 mt-4">
                    <div class="col-md-12">
                        <h5 class="text-primary border-bottom pb-2">
                            <i class="fas fa-briefcase"></i> Job Information
                        </h5>
                    </div>
                </div>
                <!-- Department -->

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="DepartmentID" class="form-label"></label>
                        <select asp-for="DepartmentID" class="form-select" asp-items="Model.DepartmentList">
                            <option value="">-- Select Department --</option>
                        </select>
                        <span asp-validation-for="DepartmentID" class="text-danger small"></span>
                    </div>
                    <!-- JobTitle -->

                    <div class="col-md-6 mb-3">
                        <label asp-for="JobTitleID" class="form-label"></label>
                        <select asp-for="JobTitleID" class="form-select" asp-items="Model.JobTitleList">
                            <option value="">-- Select Job Title --</option>
                        </select>
                        <span asp-validation-for="JobTitleID" class="text-danger small"></span>
                    </div>
                </div>
                <!-- HireDate -->

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="HireDate" class="form-label"></label>
                        <input asp-for="HireDate" class="form-control" type="date" />
                        <span asp-validation-for="HireDate" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="BasicSalary" class="form-label"></label>
                        <div class="input-group">
                            <input asp-for="BasicSalary" class="form-control" type="number" step="0.01" />
                            <span class="input-group-text">L.E</span>
                        </div>
                        <span asp-validation-for="BasicSalary" class="text-danger small"></span>
                    </div>
                </div>

                <!-- Link to a user account -->
                <div class="row mb-3 mt-4">
                    <div class="col-md-12">
                        <h5 class="text-primary border-bottom pb-2">
                            <i class="fas fa-user-lock"></i> Associated User Account
                        </h5>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12 mb-3">
                        <label asp-for="UserId" class="form-label"></label>
                        <select asp-for="UserId" class="form-select" asp-items="Model.UserList">
                            <option value="">-- No linked account --</option>
                        </select>
                        <span asp-validation-for="UserId" class="text-danger small"></span>
                        <small class="form-text text-muted">
                            <i class="fas fa-info-circle"></i>
                            You can change the linked account or unlink
                        </small>
                    </div>
                </div>


                <div class="row mt-4">
                    <div class="col-md-12">
                        <button type="submit" class="btn btn-warning btn-lg text-white">
                            <i class="fas fa-save"></i> Save Changes
                        </button>
                        <a asp-action="Details" asp-route-id="@Model.EmployeeID" class="btn btn-info btn-lg">
                            <i class="fas fa-eye"></i> Show Details
                        </a>
                        <input type="hidden" name="id" value="@Model.EmployeeID" />
                        <a asp-action="Index" class="btn btn-secondary btn-lg">
                            <i class="fas fa-times"></i> Cancel
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}