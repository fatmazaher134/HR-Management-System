@using System.Linq
@model IEnumerable<HRMS.Models.Employee>

@{
    ViewData["Title"] = "Employees List";
}

<h2>Employees</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Add New Employee</a>
</p>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Full Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Hire Date</th>
            <th>Salary</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    @if (Model != null && Model.Any())
    {
        foreach (var emp in Model)
        {
            <tr>
                <td>@emp.EmployeeID</td>
                <td>@emp.FirstName @emp.LastName</td>
                <td>@emp.Email</td>
                <td>@emp.PhoneNumber</td>
                <td>@emp.HireDate.ToShortDateString()</td>
                <td>@emp.BasicSalary.ToString("C")</td>
                <td>
                    @(emp.IsActive ? "Active" : "Inactive")
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@emp.EmployeeID" class="btn btn-info btn-sm">View</a>
                    <a asp-action="Edit" asp-route-id="@emp.EmployeeID" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@emp.EmployeeID" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    }
    else
    {
        <tr>
            <td colspan="8" class="text-center">No employees found.</td>
        </tr>
    }
    </tbody>
</table>
