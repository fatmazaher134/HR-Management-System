@model HRMS.ViewModels.Employee.EmployeeDetailsViewModel

@{
    ViewData["Title"] = "Employee Details";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-md-6">
            <h2 class="text-primary">
                <i class="fas fa-user-circle"></i> Employee Details
            </h2>
        </div>
        <div class="col-md-6 text-end">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Back To List
            </a>
            @if (User.IsInRole("Admin") || User.IsInRole("HR"))
            {
                <a asp-action="Edit" asp-route-id="@Model.EmployeeID" class="btn btn-warning">
                    <i class="fas fa-edit"></i> Edit
                </a>
                <a asp-action="Delete" asp-route-id="@Model.EmployeeID" class="btn btn-danger">
                    <i class="fas fa-trash"></i> Delete
                </a>
            }
        </div>
    </div>

    <div class="row">
        <!-- الPersonal Info -->
        <div class="col-md-6 mb-4">
            <div class="card shadow h-100">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-id-card"></i> Personal Info
                    </h5>
                </div>
                <div class="card-body">
                    <table class="table table-borderless">
                        <tbody>
                            <tr>
                                <th width="40%">
                                    <i class="fas fa-hashtag text-muted"></i> Employee ID:
                                </th>
                                <td><strong>@Model.EmployeeID</strong></td>
                            </tr>
                            <tr>
                                <th>
                                    <i class="fas fa-user text-muted"></i> Full Name:
                                </th>
                                <td><strong>@Model.FullName</strong></td>
                            </tr>
                            <tr>
                                <th>
                                    <i class="fas fa-envelope text-muted"></i> Email:
                                </th>
                                <td>@Model.Email</td>
                            </tr>
                            <tr>
                                <th>
                                    <i class="fas fa-phone text-muted"></i> Phone Number:
                                </th>
                                <td>@(Model.PhoneNumber ?? "UnKnown ")</td>
                            </tr>
                            <tr>
                                <th>
                                    <i class="fas fa-map-marker-alt text-muted"></i> Address:
                                </th>
                                <td>@(Model.Address ?? "UnKnown")</td>
                            </tr>
                            <tr>
                                <th>
                                    <i class="fas fa-birthday-cake text-muted"></i> Birth Date:
                                </th>
                                <td>
                                    @Model.DateOfBirth.ToString("dd/MM/yyyy")
                                    <span class="badge bg-info">@Model.Age Year</span>
                                </td>
                            </tr>
                            <tr>
                                <th>
                                    <i class="fas fa-user-tag text-muted"></i> User Name:
                                </th>
                                <td>@Model.UserName</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Personal info -->
        <div class="col-md-6 mb-4">
            <div class="card shadow h-100">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-briefcase"></i> Personal Information
                    </h5>
                </div>
                <div class="card-body">
                    <table class="table table-borderless">
                        <tbody>
                            <tr>
                                <th width="40%">
                                    <i class="fas fa-building text-muted"></i> Department:
                                </th>
                                <td>
                                    <span class="badge bg-info fs-6">@Model.DepartmentName</span>
                                </td>
                            </tr>
                            <tr>
                                <th>
                                    <i class="fas fa-user-tie text-muted"></i> Job Title:
                                </th>
                                <td>
                                    <span class="badge bg-secondary fs-6">@Model.JobTitleName</span>
                                </td>
                            </tr>
                            <tr>
                                <th>
                                    <i class="fas fa-calendar-plus text-muted"></i> Hiring Date:
                                </th>
                                <td>
                                    @Model.HireDate.ToString("dd/MM/yyyy")
                                    <span class="badge bg-primary">@Model.YearsOfService Hiring Year</span>
                                </td>
                            </tr>
                            <tr>
                                <th>
                                    <i class="fas fa-money-bill-wave text-muted"></i> Basic Salary:
                                </th>
                                <td>
                                    <strong class="text-success fs-5">@Model.BasicSalary.ToString("N2") L.E</strong>
                                </td>
                            </tr>
                            <tr>
                                <th>
                                    <i class="fas fa-toggle-on text-muted"></i> Status:
                                </th>
                                <td>
                                    @if (Model.IsActive)
                                    {
                                        <span class="badge bg-success fs-6">
                                            <i class="fas fa-check-circle"></i> Active
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger fs-6">
                                            <i class="fas fa-times-circle"></i> InActive
                                        </span>
                                    }
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- Statistics (optional - can be added later) -->
    @if (User.IsInRole("Admin") || User.IsInRole("HR"))
    {
        <div class="row mt-4">
            <div class="col-md-12">
                <div class="card shadow">
                    <div class="card-header bg-info text-white">
                        <h5 class="mb-0">
                            <i class="fas fa-chart-line"></i> Quick Links
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row text-center">
                            <div class="col-md-3">
                                <a href="#" class="btn btn-outline-primary w-100">
                                    <i class="fas fa-calendar-check fa-2x mb-2"></i>
                                    <p class="mb-0">attendance record</p>
                                </a>
                            </div>
                            <div class="col-md-3">
                                <a href="#" class="btn btn-outline-success w-100">
                                    <i class="fas fa-file-invoice-dollar fa-2x mb-2"></i>
                                    <p class="mb-0">Payroll</p>
                                </a>
                            </div>
                            <div class="col-md-3">
                                <a href="#" class="btn btn-outline-warning w-100">
                                    <i class="fas fa-umbrella-beach fa-2x mb-2"></i>
                                    <p class="mb-0">Leaves Requests</p>
                                </a>
                            </div>
                            <div class="col-md-3">
                                <a href="#" class="btn btn-outline-info w-100">
                                    <i class="fas fa-folder-open fa-2x mb-2"></i>
                                    <p class="mb-0">Documents</p>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>