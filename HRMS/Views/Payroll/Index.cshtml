@model IEnumerable<PayslipSummaryViewModel>
@{
    ViewData["Title"] = "Payroll Management";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1><i class="bi bi-cash-stack"></i> @ViewData["Title"]</h1>
        <a asp-action="Generate" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Generate New Monthly Payroll
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card shadow-sm">
        <div class="card-body">
            @if (!Model.Any())
            {
                <div class="alert alert-info text-center">
                    No payslips have been generated yet.
                </div>
            }
            else
            {
                <table class="table table-striped table-hover align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th>Month</th>
                            <th>Year</th>
                            <th>Employee Name</th>
                            <th>Gross Salary</th>
                            <th>Total Deductions</th>
                            <th>Net Salary</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Month</td>
                                <td>@item.Year</td>
                                <td>@item.EmployeeFullName</td>
                                <td>@item.GrossSalary.ToString("N2")</td>
                                <td>@item.TotalDeductions.ToString("N2")</td>
                                <td class="fw-bold">@item.NetSalary.ToString("N2")</td>
                                <td>
                                    <a asp-action="Details" asp-route-id="@item.PayslipID" class="btn btn-info btn-sm" title="Details">
                                        <i class="bi bi-eye"></i>
                                    </a>

                                    <form asp-action="Delete" asp-route-id="@item.PayslipID" method="post" class="d-inline"
                                          onsubmit="return confirm('Are you sure you want to delete this payslip? This action cannot be undone.');">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-danger btn-sm" title="Delete">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>
</div>