@model IEnumerable<PayslipViewModel>

@{
    ViewData["Title"] = "My Payslips";
}

<h1>My Payslips</h1>

@if (Model.Any())
{
    <table class="table table-hover">
        <thead>
            <tr>
                <th>
                    Period
                </th>
                <th class="text-end">
                    Net Salary
                </th>
                <th>
                    Pay Date
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.Month / @item.Year
                    </td>
                    <td class="text-end">
                        @item.NetSalary.ToString("C")
                    </td>
                    <td>
                        @item.GeneratedDate.ToShortDateString()
                    </td>
                    <td class="text-end">
                        <a asp-action="Details"
                           asp-route-id="@item.PayslipID"
                           class="btn btn-info btn-sm">
                            View Details
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info">
        You do not have any payslips generated yet.
    </div>
}