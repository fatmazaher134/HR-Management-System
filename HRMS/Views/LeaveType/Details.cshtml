@model HRMS.ViewModels.LeaveType.LeaveTypeViewModel

@{
    ViewData["Title"] = "Leave Type Details";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-md-6">
            <h2 class="text-primary">
                <i class="fas fa-tag"></i> Leave Type Details
            </h2>
        </div>
        <div class="col-md-6 text-end">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Back to List
            </a>
            @if (User.IsInRole("Admin"))
            {
                <a asp-action="Edit" asp-route-id="@Model.LeaveTypeID" class="btn btn-warning">
                    <i class="fas fa-edit"></i> Edit
                </a>
                <a asp-action="Delete" asp-route-id="@Model.LeaveTypeID" class="btn btn-danger">
                    <i class="fas fa-trash"></i> Delete
                </a>
            }
        </div>
    </div>

    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-info-circle"></i> Leave Type Information
                    </h5>
                </div>
                <div class="card-body">
                    <table class="table table-borderless">
                        <tbody>
                            <tr>
                                <th width="40%">
                                    <i class="fas fa-hashtag text-muted"></i> Leave Type ID:
                                </th>
                                <td><strong>@Model.LeaveTypeID</strong></td>
                            </tr>
                            <tr>
                                <th>
                                    <i class="fas fa-tag text-muted"></i> Leave Type Name:
                                </th>
                                <td>
                                    <h4 class="text-primary mb-0">@Model.TypeName</h4>
                                </td>
                            </tr>
                            <tr>
                                <th>
                                    <i class="fas fa-calendar-alt text-muted"></i> Default Balance:
                                </th>
                                <td>
                                    <span class="badge bg-info fs-5">@Model.DefaultBalance Days per Year</span>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="card shadow mt-4">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-lightbulb"></i> Information
                    </h5>
                </div>
                <div class="card-body">
                    <p class="mb-2">
                        <i class="fas fa-check-circle text-success"></i>
                        This leave type provides <strong>@Model.DefaultBalance days</strong> per year for employees
                    </p>
                    <p class="mb-2">
                        <i class="fas fa-users text-primary"></i>
                        All employees in the system can use this leave type when requesting leave
                    </p>
                    <p class="mb-0">
                        <i class="fas fa-cog text-warning"></i>
                        Only administrators can modify or delete leave types
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>