@model HRMS.ViewModels.LeaveType.LeaveTypeFormViewModel

@{
    ViewData["Title"] = "Edit Leave Type";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-md-6">
            <h2 class="text-warning">
                <i class="fas fa-edit"></i> Edit Leave Type
            </h2>
        </div>
        <div class="col-md-6 text-end">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Back to List
            </a>
        </div>
    </div>

    <div class="card shadow">
        <div class="card-body">
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="LeaveTypeID" />
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="row mb-3">
                    <div class="col-md-12">
                        <h5 class="text-primary border-bottom pb-2">
                            <i class="fas fa-info-circle"></i> Leave Type Information
                        </h5>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12 mb-3">
                        <label asp-for="TypeName" class="form-label"></label>
                        <input asp-for="TypeName" class="form-control" />
                        <span asp-validation-for="TypeName" class="text-danger small"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12 mb-3">
                        <label asp-for="DefaultBalance" class="form-label"></label>
                        <input asp-for="DefaultBalance" class="form-control" type="number" min="0" max="365" />
                        <span asp-validation-for="DefaultBalance" class="text-danger small"></span>
                        <small class="form-text text-muted">
                            <i class="fas fa-info-circle"></i> Number of days per year for this leave type
                        </small>
                    </div>
                </div>

                <div class="alert alert-warning">
                    <i class="fas fa-exclamation-triangle"></i>
                    <strong>Note:</strong> Changing this leave type will affect all existing leave requests using this type.
                </div>

                <div class="row mt-4">
                    <div class="col-md-12">
                        <button type="submit" class="btn btn-warning btn-lg text-white">
                            <i class="fas fa-save"></i> Save Changes
                        </button>
                        <a asp-action="Details" asp-route-id="@Model.LeaveTypeID" class="btn btn-info btn-lg">
                            <i class="fas fa-eye"></i> View Details
                        </a>
                        <a asp-action="Index" class="btn btn-secondary btn-lg">
                            <i class="fas fa-times"></i> Cancel
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}