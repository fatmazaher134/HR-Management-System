@model HRMS.ViewModels.LeaveType.LeaveTypeViewModel

@{
    ViewData["Title"] = "Delete Leave Type";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-md-12">
            <h2 class="text-danger">
                <i class="fas fa-exclamation-triangle"></i> Delete Leave Type
            </h2>
        </div>
    </div>

    <div class="alert alert-danger" role="alert">
        <h4 class="alert-heading">
            <i class="fas fa-exclamation-circle"></i> Warning!
        </h4>
        <p class="mb-0">
            Are you sure you want to delete this leave type? This action cannot be undone.
        </p>
    </div>

    <div class="card shadow border-danger">
        <div class="card-header bg-danger text-white">
            <h5 class="mb-0">
                <i class="fas fa-tag"></i> Leave Type to Delete
            </h5>
        </div>
        <div class="card-body">
            <table class="table table-borderless">
                <tbody>
                    <tr>
                        <th width="30%">
                            <i class="fas fa-hashtag text-muted"></i> ID:
                        </th>
                        <td><strong>@Model.LeaveTypeID</strong></td>
                    </tr>
                    <tr>
                        <th>
                            <i class="fas fa-tag text-muted"></i> Leave Type Name:
                        </th>
                        <td><strong class="text-danger">@Model.TypeName</strong></td>
                    </tr>
                    <tr>
                        <th>
                            <i class="fas fa-calendar-alt text-muted"></i> Default Balance:
                        </th>
                        <td>
                            <span class="badge bg-info fs-6">@Model.DefaultBalance Days</span>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <div class="card shadow mt-4 border-warning">
        <div class="card-body">
            <h5 class="text-warning">
                <i class="fas fa-info-circle"></i> Important Notes
            </h5>
            <ul class="mb-0">
                <li>Deleting this leave type may fail if it's being used by existing leave requests</li>
                <li>Consider disabling the leave type instead of deleting it</li>
                <li>All historical data will be affected</li>
            </ul>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-12">
            <form asp-action="Delete" method="post">
                <input type="hidden" name="id" value="@Model.LeaveTypeID" />
                @Html.AntiForgeryToken()

                <button type="submit" class="btn btn-danger btn-lg"
                        onclick="return confirm('Are you absolutely sure you want to delete this leave type?');">
                    <i class="fas fa-trash"></i> Yes, Delete It
                </button>

                <a asp-action="Details" asp-route-id="@Model.LeaveTypeID" class="btn btn-info btn-lg">
                    <i class="fas fa-eye"></i> View Details
                </a>

                <a asp-action="Index" class="btn btn-secondary btn-lg">
                    <i class="fas fa-times"></i> Cancel
                </a>
            </form>
        </div>
    </div>
</div>