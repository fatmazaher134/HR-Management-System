@model JobTitleViewModel

@{
    ViewData["Title"] = "Job Title Details";
}

<h1>Details</h1>

<div>
    <h4>Job Title</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.TitleName)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.TitleName)</dd>
    </dl>
</div>
<div>
    @if (User.IsInRole("Admin"))
    {
        <a asp-action="Edit" asp-route-id="@Model.JobTitleID" class="btn btn-secondary">Edit</a>
    }
    <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
</div>