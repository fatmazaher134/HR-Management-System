@model HRMS.ViewModels.SalaryComponent.EditSalaryComponentViewModel

@{
    ViewData["Title"] = "Edit Salary Component";
}

<h2 class="mb-4">Edit Salary Component</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="ComponentID" />

    <div class="mb-3">
        <label asp-for="ComponentName" class="form-label"></label>
        <input asp-for="ComponentName" class="form-control" />
        <span asp-validation-for="ComponentName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ComponentType" class="form-label"></label>
        <select asp-for="ComponentType" class="form-select">
            <option value="Allowance" selected="@Model.ComponentType == ComponentType.Allowance">Allowance</option>
            <option value="Deduction" selected="@Model.ComponentType == ComponentType.Deduction">Deduction</option>
        </select>
        <span asp-validation-for="ComponentType" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
