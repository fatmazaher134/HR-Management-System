@model HRMS.ViewModels.SalaryComponent.SalaryComponentViewModel

@{
    ViewData["Title"] = "Delete Salary Component";
}

<h2 class="mb-4 text-danger">Delete Salary Component</h2>

<h4>Are you sure you want to delete this component?</h4>

<div>
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.ComponentName</dd>

        <dt class="col-sm-2">Type</dt>
        <dd class="col-sm-10">@Model.ComponentType</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="ComponentID" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
