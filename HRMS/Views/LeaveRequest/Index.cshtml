@model IEnumerable<HRMS.ViewModels.Employee.LeaveRequestViewModel>

@{
    ViewData["Title"] = "All Leave Requests";
}

<h2 class="mb-4">All Leave Requests</h2>

<table class="table table-bordered table-hover">
    <thead class="table-light">
        <tr>
            <th>Employee Name</th>
            <th>Leave Type</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.EmployeeName</td>
                <td>@item.LeaveTypeName</td>
                <td>@item.StartDate.ToShortDateString()</td>
                <td>@item.EndDate.ToShortDateString()</td>
                <td>@item.Status</td>
                <td>
                    @if (item.Status == "Pending")
                    {
                        <a asp-action="Approve" asp-route-id="@item.LeaveRequestID" class="btn btn-success btn-sm">Approve</a>
                        <a asp-action="Reject" asp-route-id="@item.LeaveRequestID" class="btn btn-danger btn-sm">Reject</a>
                    }
                    else
                    {
                        <span class="text-muted">No Action</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
